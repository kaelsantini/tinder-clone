<div class="row">
    <div class="col-md-4 bg-white">
        <%= render "layouts/profile_bar" %>
        <ul class="nav nav-tinder-sidebar ml-4 mt-3" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Matches</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="profile" aria-selected="false">Messages</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane ml-2 fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <%= render "browse/matches" %>
            </div>
            <div class="tab-pane ml-2 fade" id="messages" role="tabpanel" aria-labelledby="messages-tab">
                <div class="col">
                    <p>No messages</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-9 col-md-8">
        <ul id="slides">
            <% @users.each_with_index do |user, index| %>
                <div class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
                    <li>
                        <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>')">
                        </div>
                        <div class="user-details">
                            <span class="user-name"><%= user.first_name %></span>, 31<br />
                            <i class="fa fa-graduation-cap mr-1"></i> Job/Studies<br />
                            <i class="fa fa-map-marker mr-3"></i> Location
                        </div>
                    </li>
                </div>
            <% end %> 

        </ul>

        <div id="slide-controls">
            <span id="decline"><i class="fa fa-times-circle fa-2x"></i></span>
            <span id="approve"><i class="fa fa-heart fa-2x"></i></span>
        </div>
    </div>
</div>

<div id="converstion">
    <div class="row">
        <div class="col-12 top-bar">
            <%= link_to image_tag(@users.first.images.first, width: "40px", height: "40px", class: "float-left profile-thumb rounded-circle mr-3"), "#" %>
            <span><%= @users.first.first_name %></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p>You matched with <span><%= @users.first.first_name %></span> <%= time_ago_in_words(@users.first.created_at) %> ago</p>
            <%= link_to image_tag(@users.first.images.first, width: "40px", height: "40px", class: "rounded-circle"), "#" %>
            <p>Send them a message and make them smile :)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form>
                <div class="form-group">
                    <input type="text" name="message" value="" placeholder="Ender your message and press send" class="form-control" />
                    <input type="submit" name="submit" value="Send" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>