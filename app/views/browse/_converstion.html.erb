<div id="conversation">
    <div class="row">
        <div class="col-12 top-bar">
            <%= link_to image_tag(@users.first.images.first, width: "40px", height: "40px", class: "float-left profile-thumb rounded-circle mr-3"), "#" %>
            <p class="text-muted mt-3">You matched with <%= @users.first.first_name %> on <%=  %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <p class="mt-3">You matched with <span><%= @users.first.first_name %></span> <%= time_ago_in_words(@users.first.created_at) %> ago</p>
            <%= link_to image_tag(@users.first.images.first, width: "40px", height: "40px", class: "rounded-circle mt-3 mb-5"), "#" %>
            <p>Send them a message and make them smile :)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mt-5 bottom-bar">
            <form>
                <div class="input-group">
                    <input type="text" name="message" value="" placeholder="Ender your message and press send" class="form-control" />
                    <div class="input-group-append">
                        <input type="submit" name="submit" value="Send" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

